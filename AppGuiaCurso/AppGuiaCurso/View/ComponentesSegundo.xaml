<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGuiaCurso.View.ComponentesSegundo"
             BackgroundColor="White"
             Title="Disciplinas do Segundo Ano">
    <ContentPage.Content>
        <ScrollView>
            <ScrollView.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="White" Offset="0.5" />
                    <GradientStop Color="#A9A9A9" Offset="1.0" />
                </LinearGradientBrush>
            </ScrollView.Background>
            
            <StackLayout VerticalOptions="CenterAndExpand" Padding="10">
                <Button Text="Programação Web II" Clicked="Button_Clicked_Web2" Style="{ StaticResource botaoCinza }" />
                <Button Text="Programação de Aplicativos Mobile I" Clicked="Button_Clicked_Mob1" Style="{ StaticResource botaoCinza }" />
                <Button Text="Desenvolvimento de Sistemas" Clicked="Button_Clicked_DS" Style="{ StaticResource botaoCinza }" />
                <Button Text="Sistemas Embarcados" Clicked="Button_Clicked_SE" Style="{ StaticResource botaoCinza }" />
                <Button Text="Banco de Dados II" Clicked="Button_Clicked_BD2" Style="{ StaticResource botaoCinza }" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>